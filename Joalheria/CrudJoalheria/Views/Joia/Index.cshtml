@model IEnumerable<JoiaModel>

<div class="container">

	<div class="d-flex justify-content-between align-items-center mb-5">

		<h1>Joias</h1>

		<a class="btn btn-success mx-2" asp-controller="Joia" asp-action="Cadastrar">Cadastrar nova joia</a>
</div>



<table class="table table-striped table-dark">
<thead>
<tr>

<th scope="col">Tipo</th>
<th scope="col">Material</th>
<th scope="col">Peso</th>
<th scope="col">Valor</th>
</tr>
</thead>
<tbody>
		@if(Model!=null ){
			@foreach (var joia in Model)
			{

				<tr>
					<th scope="row">@joia.Tipo</th>
					<td>@joia.Material</td>
					<td>@joia.Peso</td>
					<td>@joia.Valor</td>
					<td> 
						<a asp-controller="Joia" asp-action="Editar" asp-route-id="@joia.Id" class="btn btn-warning mx-2">Editar</a>
						<a asp-controller="Joia" asp-action="Excluir" asp-route-id="@joia.Id" class="btn btn-danger mx-2">Excluir</a>
				    </td>
					</tr>
			}
		}
			</tbody>
</table>

</div>