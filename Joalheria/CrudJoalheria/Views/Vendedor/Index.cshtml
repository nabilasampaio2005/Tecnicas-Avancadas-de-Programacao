@model IEnumerable<VendedorModel>

<div class="container">

	<div class="d-flex justify-content-between align-items-center mb-5">

		<h1>Vendedor</h1>

		<a class="btn btn-success mx-2" asp-controller="Vendedor" asp-action="Cadastrar">Cadastrar novo vendedor</a>
	</div>

<table class="table table-striped table-dark">
<thead>
<tr>

<th scope="col">Nome</th>
<th scope="col">CPF</th>
<th scope="col">Telefone</th>
<th scope="col">Cidade</th>
</tr>
</thead>
<tbody>
		@if(Model!=null ){
			@foreach (var vendedor in Model)
			{

				<tr>
					<th scope="row">@vendedor.Nome</th>
					<td>@vendedor.CPF</td>
					<td>@vendedor.Telefone</td>
					<td>@vendedor.Cidade</td>

					<td>
						<a asp-controller="Vendedor" asp-action="Editar" asp-route-id="@vendedor.Id" class="btn btn-warning mx-2">Editar</a>
						<a asp-controller="Vendedor" asp-action="Excluir" asp-route-id="@vendedor.Id" class="btn btn-danger mx-2">Excluir</a>
                    </td>
				</tr>
			}
		}
			</tbody>
</table>

</div>