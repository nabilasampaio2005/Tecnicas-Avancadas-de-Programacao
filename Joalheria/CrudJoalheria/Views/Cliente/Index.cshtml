@model IEnumerable<ClienteModel>

<div class="container">

	<div class="d-flex justify-content-between align-items-center mb-5">

		<h1>Cliente</h1>

		<a class="btn btn-success mx-2" asp-controller="Cliente" asp-action="Cadastrar">Cadastrar novo cliente</a>
	</div>

<table class="table table-striped table-dark">
<thead>
<tr>

<th scope="col">Nome</th>
<th scope="col">CPF</th>
<th scope="col">Endereco</th>
<th scope="col">Telefone</th>
</tr>
</thead>
<tbody>
		@if(Model!=null ){
			@foreach (var cliente in Model)
			{

				<tr>
					<th scope="row">@cliente.Nome</th>
					<td>@cliente.CPF</td>
					<td>@cliente.Endereco</td>
					<td>@cliente.Telefone</td>

				<td>
					<a asp-controller="Cliente" asp-action="Editar" asp-route-id="@cliente.Id" class="btn btn-warning mx-2">Editar</a>
					<a asp-controller="Cliente" asp-action="Excluir" asp-route-id="@cliente.Id" class="btn btn-danger mx-2">Excluir</a>
				</td>
				</tr>
			}
		}
			</tbody>
</table>

</div>